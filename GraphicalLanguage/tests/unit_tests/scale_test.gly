-- test several cases of place transformation
mode: 2D
-- basic setup
num X: 600

canvas: X, X, #white

num Offset: 5

point F1L: 0, X/2 - Offset
point F1R: 0, X/2 + Offset
point F2L: X, X/2 - Offset
point F2R: X, X/2 + Offset
point F3U: X/2 - Offset, 0
point F3D: X/2 + Offset, 0
point F4U: X/2 - Offset, X
point F4D: X/2 + Offset, X

list<points> VerGroup: F1L, F1R, F2R, F2L
list<points> HorGroup: F3U, F4U, F4D, F3D

polygon Vertical: VerGroup
polygon Horizontal: HorGroup

draw Vertical
draw Horizontal

-- point test
point S1: 100, 100

point SS1: 150, 150
num F1: 2
fill SS1: #red

draw S1
draw SS1
scale S1: F1, SS1
draw S1

-- segment test
point P1: 550, 200
point P2: 500, 250
segment S2: P1, P2

point SS2: 450, 200
num F2: 0.5
fill SS2: #red

draw S2
draw SS2
scale S2: F2, SS2
draw S2

-- circle test
point PC: 100, 450
circle S3: PC, 50
fill S3: #green

point SS3: 150, 500
num F3: -0.5
fill SS3: #red

draw S3
draw SS3
scale S3: F3, SS3
draw S3

-- polygon test
point PP1: 330, 400
point PP2: 350, 340
point PP3: 550, 330
point PP4: 400, 400
list<points> Points: PP1, PP2, PP3, PP4
polygon S4: Points
fill S4: #blue

point SS4: 450, 450
num F4: -0.5
fill SS4: #red

draw S4
draw SS4
scale S4: F4, SS4
draw S4